#!/bin/bash
# template

# Sanity check command line options
usage() {
  echo "Usage: $0 (option1|option2)"
}

if [ $# -ne 1 ]; then
  usage
  exit 1
fi

# Parse argument.  $1 is the first argument
case $1 in
	"option1")
		echo "option 1"
	  ;;

	"option2")
		echo "option 2"
	  ;;

	*)
	  usage
	  exit 1
	  ;;
esac